{
  "name": "clutch-backend",
  "version": "1.0.0",
  "description": "Backend for CLUTCH betting platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
